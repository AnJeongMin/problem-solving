def solution(number, k):
    answer = ''
    
    idx, cnt = 0, 0
    while idx < len(number)-1 and cnt < k:
        if int(number[idx]) < int(number[idx+1]):
            number = number[:idx]+number[idx+1:]
            cnt += 1
            idx = max(0, idx-1)
        else:
            idx += 1
    
    if cnt < k:
        number = number[:-(k-cnt)]
    return number